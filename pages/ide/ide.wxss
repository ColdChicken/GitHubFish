/* pages/ide/ide.wxss */
.header {
  display: flex;
  flex-direction: row;
  border-bottom: solid 2rpx #576B95;
  height: 80rpx;
}

.action-catalog {
  text-align: center;
  font-size: 50rpx;
  color: #888888;
  width: 20%;
  line-height: 80rpx;
}

.filename {
  text-align: center;
  font-size: 35rpx;
  color: #576B95;
  width: 60%;
  line-height: 80rpx;
}

.action-close {
  text-align: center;
  font-size: 50rpx;
  color: #888888;
  width: 20%;
  line-height: 80rpx;
}

.catalog {
  position:absolute;
  border-right: solid 2rpx #576B95;
  border-bottom: solid 2rpx #576B95;
  background-color: #FFFFFF;
  height: 85%;
  width: 90%;
  z-index: 900;
}

.catalog-data {
  display: flex;
  flex-direction: column;
  height: 85%;
}

.content {
  padding: 0;
  margin: 0;
}

.raw-codes {
  white-space:pre-wrap;
}

.up-dir {
  border-bottom: 8rpx;
  color: #888888;
  font-size: 16pt;
}

.dir {
  padding-left: 8rpx;
  color: #576B95;
  font-size: 14pt;
}

.file {
  padding-left: 8rpx;
  color: #888888;
  font-size: 14pt;
}

.codes {
  padding: 0;
  margin: 0;
}

.line {
  font-size: 30rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.token {
  margin: 0;
  padding: 0;
  display: inline-block;
  white-space:pre;
}


